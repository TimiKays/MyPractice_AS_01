<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_title_2et"
        style="@style/text_title"
        android:layout_width="match_parent"
        android:background="@color/darkBule"
        android:text="设置密码" />

    <EditText
        android:id="@+id/et_dialog_password_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"
        android:layout_below="@id/tv_dialog_title_2et"
        android:layout_margin="16dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_dialog_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认密码"
        android:layout_below="@id/et_dialog_password_new"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textPassword"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dialog_password_confirm"
        android:layout_margin="16dp"
        >

        <Button
            android:id="@+id/bt_init_password_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_init_password_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"/>


    </LinearLayout>


</RelativeLayout>