<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangqi.MainActivity">
    <include layout="@layout/common_title"/>

    <com.tangqi.service.MarqueeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想要拨打电话号码就要先交费，您的号码已经欠费一个月啦，快去缴费哦，要去营业厅，别去其他地方！"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
    <com.tangqi.service.MarqueeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想要拨打电话号码就要先交费，您的号码已经欠费一个月啦，快去缴费哦，要去营业厅，别去其他地方！"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/et_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入号码"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <EditText
        android:id="@+id/editText"
        android:lines="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_tv" />

    <Button
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="拨打"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试到底能不能到右边"
            android:layout_gravity="right|bottom"
            />

        <Button
            android:id="@+id/go_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换到表格布局" />
        <Button
            android:id="@+id/go_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换到相对布局" />

        <Button
            android:id="@+id/calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算器" />
        <Button
            android:id="@+id/list_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="看看纯文字列表"/>
    </LinearLayout>



</LinearLayout>
